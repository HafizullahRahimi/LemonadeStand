@page "/"
@inject IFruitPressService FruitPressService

<PageTitle>Lemonade Stand</PageTitle>

<h1>Lemonade Stand</h1>

@* Available recipies *@
<h3>Available recipies</h3>
<div class="d-flex my-2 justify-content-between ">
    <div class="card col-4" style="width: 18rem;">
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Apple Lemonade</li>
            <li class="list-group-item">Price per glass: 10</li>
            <li class="list-group-item">Fruits needed per glass: 2,5 Apple(s)</li>
        </ul>
    </div>

    <div class="card col-4" style="width: 18rem;">
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Melon Lemonade</li>
            <li class="list-group-item">Price per glass: 12</li>
            <li class="list-group-item">Fruits needed per glass: 0,5 Melon</li>
        </ul>
    </div>

    <div class="card col-4" style="width: 18rem;">
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Orange Lemonade</li>
            <li class="list-group-item">Price per glass: 9</li>
            <li class="list-group-item">Fruits needed per glass: 1 Orange</li>
        </ul>
    </div>

</div>



@* Customer order *@
<h3 class="mt-3">Customer order</h3>

@* Alert *@
@if (text != null)
{
    <Alert Title="@text" />
}

@* Form *@
<div>

    <div class="d-flex mb-3 justify-content-between">
        <div class="col-4">
            <label for="formGroupExampleInput" class="form-label">Select recipe</label>
            <select class="form-select" aria-label="Default select example">
                <option value="1">Apple Lemonade </option>
                <option value="2">Melon Lemonade</option>
                <option value="3">Orange Lemonade</option>
            </select>
        </div>
        <div class="col-4 mx-2">
            <label for="formGroupExampleInput" class="form-label">Ordered Quanity</label>
            <input type="number" class="form-control" id="formGroupExampleInput" placeholder="0">
        </div>

        <div class="col-4">
            <label for="formGroupExampleInput" class="form-label">Money Paid</label>
            <input type="number" class="form-control" id="formGroupExampleInput" placeholder="0">
        </div>

    </div>

    <div class="d-flex mb-3 justify-content-between">
        <div class="col-4">
            <label for="formGroupExampleInput" class="form-label">Apples added</label>
            <input type="number" class="form-control" id="formGroupExampleInput" placeholder="0">
        </div>

        <div class="col-4 mx-2">
            <label for="formGroupExampleInput" class="form-label">Melons added</label>
            <input type="number" class="form-control" id="formGroupExampleInput" placeholder="0">
        </div>

        <div class=" col-4">
            <label for="formGroupExampleInput" class="form-label">Oranges added</label>
            <input type="number" class="form-control" id="formGroupExampleInput" placeholder="0">
        </div>
    </div>

    <div class="col-auto">
        <button type="submit" class="btn btn-primary mb-3">Process order</button>
    </div>

</div>



@code {
    private string text = null;


    protected override void OnInitialized()
    {
        text = FruitPressService.Test();

        base.OnInitialized();
    }
}
